            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="210"/>
            <Setter Property="Margin" Value="0,6,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
