    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">
            <Image Source="/Pictures/Group 18.png" Height="37" Width="180" RenderOptions.BitmapScalingMode="HighQuality" 
RenderOptions.EdgeMode="Aliased" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Создание профиля" Style="{StaticResource LabelAddProfile}"/>
            <Button Height="303" Style="{StaticResource AddPhotoButton}" Width="298" Command="{Binding OpenAddPhotoWindowButton}">
                <Button.Background>
                    <ImageBrush ImageSource="{Binding Image}"/>
                </Button.Background>
            </Button>
            
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Имя" Style="{StaticResource TextBlockText}"/>
            <TextBox Style="{StaticResource ModernTextBoxStyle}" Tag="Как тебя зовут?)" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Описание" Style="{StaticResource TextBlockText}"/>
            <TextBox Style="{StaticResource BigTextBoxStyle}" Tag="Напиши что нибудь о себе..."  Text="{Binding About, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Населенный пункт" Style="{StaticResource TextBlockText}"/>
            <TextBox Style="{StaticResource LocationTextBoxStyle}" Tag="Где ты живешь?" Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Возраст" Style="{StaticResource TextBlockText}"/>
            <TextBox Style="{StaticResource ModernTextBoxStyle}" Tag="Сколько тебе лет?" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Контакты" Style="{StaticResource TextBlockText}"/>
            <TextBox Style="{StaticResource VKTextBoxStyle}" Tag="Вставь ссылку" Text="{Binding VKLink, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox Style="{StaticResource TelegramTextBoxStyle}" Tag="Имя пользователя" Text="{Binding TelegramLink, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Пол" Style="{StaticResource TextBlockText}"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="buttonWoman" Height="70" Width="68" Style="{StaticResource RoundedImageButtonStyleFemale}" Command="{Binding ClickGender}" CommandParameter="{Binding ElementName=buttonMan, Path=.}" Margin="0,8,20,0"/>
                <Button x:Name="buttonMan" Command="{Binding ClickGender}" CommandParameter="{Binding ElementName=buttonWoman, Path=.}" Height="70" Width="68" Style="{StaticResource RoundedImageButtonStyleMale}" Margin="0,8,0,0"/>
            </StackPanel>

        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
            <Button Content="Сохранить" Style="{StaticResource RoundedButton}" Command="{Binding SaveProfileButton}"/>
            <Button Width="46" Style="{StaticResource RoundedButton}" Command="{Binding ResetButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Pictures/Group 3.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <Viewbox Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5,10,70,5">
                <Grid Width="24" Height="24">
                    <!-- Зелёный кружок -->
                    <Ellipse Fill="#FF4CAF50" Width="20" Height="20" Opacity="0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPhotoAdded}" Value="True">
